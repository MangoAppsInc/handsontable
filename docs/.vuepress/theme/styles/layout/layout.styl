}

a { 
  color: $accentColor 
}

* { 
  outline: $accentColor solid 0 
  outline-offset: -2px;
}
:focus-visible {
  outline: $accentColor solid 1px 
}

#nprogress .bar { 
  background: $accentColor 
}
.hidden { 
  display:none
}

