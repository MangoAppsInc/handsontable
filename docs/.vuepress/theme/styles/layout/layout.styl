body {
  font-family: $font
  font-size $font-size
  line-height: $line-height
  background: $sideColor

  color: $textColor
  font-smooth: auto
}
.Inter { font-family: $font }
.Satoshi { font-family: 'Satoshi-Variable'}
h1,h2,h3,h4,h5,h6 { font-family: $font }

#app,
.layout-container,
.theme-container { 
  min-height:100vh
  min-height:100dvh
}

a { 
  color: $accentColor 
}

* { 
  outline: $accentColor solid 0 
  outline-offset: -2px;
}
:focus-visible {
  outline: $accentColor solid 1px 
}

#nprogress .bar { 
  background: $accentColor 
}
.hidden { 
  display:none
}

@media (min-width: $xxxLarge) {
  #app { 
    width:$xxxLarge
    margin: 0 auto

    .navbar { 
      width:$xxxLarge
      margin: 0 auto
    }
    .sidebar { 
      left: 50%
      transform: translateX(16 + $xxxLarge/-2)  
    }
    .table-of-contents { 
      right:50%
      transform: translateX(16 + $xxxLarge/2)  
    }
  }
}

.decoration-left { 
  display: block
  background:  url('{{$basePath}}/img/hero-right.webp'); 
  background-size: 100%
  width: 288px
  height: 1080px 
  position fixed
  top:600px
  left:0
  transform:rotate(90deg)
  animation: 12s linear 0s infinite alternate none running animation-left;
  opacity .15
}
.decoration-right { 
  display: block
  background:  url('{{$basePath}}/img/hero-right.webp'); 
  background-size: 100%
  width: 288px
  height: 1080px 
  position fixed
  top -140px
  right:0
  animation: 30s linear 0s infinite alternate none running animation-right;
  opacity .25
}

@keyframes animation-left {
  0% {
    transform: scale(1.25) rotate(180deg) translateX(0.1rem) translateY(0px);
  }
  20% {
      transform: scale(1.35) rotate(181deg) translateX(1.2rem) translateY(1rem);
  }
  50% {
      transform: scale(2.6) rotate(179deg) translateX(0.5rem) translateY(1.4rem);
  }
  75% {
      transform: scale(1.5) rotate(181deg) translateX(2rem) translateY(2.5rem);
  }
  100% {
      transform: scale(1.35) rotate(180deg) translateX(2rem) translateY(2.75rem);
  }
}

@keyframes animation-right {
  0% {
    transform: scale(1) rotate(0deg);
  }
  20% {
      transform: scale(1.35) rotate(2.5deg) translateX(1.75rem) translateY(0.85rem);
  }
  50% {
      transform: scale(1.1) rotate(-1deg) translateX(1rem);
  }
  75% {
      transform: scale(1.35) rotate(1deg) translateX(0px) translateY(0px);
  }
  100% {
      transform: scale(1) rotate(0deg) translateX(0px) translateY(0px);
  }
}

