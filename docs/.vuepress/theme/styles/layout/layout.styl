html {
  font-family: $font
  font-size $font-size
  line-height: $line-height
  background: $bgColor
  color: $textColor
}
body { 
  background: $bgColor
  -webkit-font-smoothing: antialiased
}

.Inter { font-family: $font }
.Satoshi { font-family: 'Satoshi-Variable'}
h1,h2,h3,h4,h5,h6 { font-family: $font }


a { 
  color: $linkColor 
  font-weight: 400
}

#app,
.layout-container,
.theme-container { 
  min-height:100vh
  min-height:100dvh
}

/*
a { 
  color: $accentColor 
}
*/

:not(.handsontable) {
  * { 
    outline: $accentColor solid 0 
    outline-offset: -2px;
  }

  :focus-visible {
    outline: $accentColor solid 1px 
  }
}


#nprogress .bar { 
  background: $accentColor 
}
.hidden { 
  display:none
}

@media (min-width: $xxxLarge) {
  #app { 
    width:$xxxLarge
    margin: 0 auto

    .navbar .navbar-wrapper { 
      width:$xxxLarge
      margin: 0 auto
    }
    .sidebar { 
      left: 50%
      transform: translateX(16 + $xxxLarge/-2)  
    }
    .table-of-contents { 
      right:50%
      transform: translateX(16 + $xxxLarge/2)  
    }
  }
}

@media (min-width: $xLarge) {
  #app {
   .footer {
      max-width: 720px
    }
  }
}

.decoration-left { 
  display: block
  background:  url('{{$basePath}}/img/hero-right.webp'); 
  background-size: 100%
  width: 288px
  height: 1080px 
  position fixed
  top:600px
  left:0
  transform:rotate(90deg)
  //animation: 12s linear 0s infinite alternate none running animation-left;
  opacity .2
  pointer-events: none
}
.decoration-right { 
  display: block
  background:  url('{{$basePath}}/img/hero-right.webp'); 
  background-size: 100%
  width: 288px
  height: 1080px 
  position fixed
  top -140px
  right:0
  //animation: 30s linear 0s infinite alternate none running animation-right;
  opacity .1
  pointer-events: none
  filter: hue-rotate(40deg);
}

@media (max-width: $medium) {
  .decoration-right { 
    display: none
  }
}
