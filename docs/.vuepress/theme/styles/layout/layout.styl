html {
  font-family: $font
  font-size $font-size
  line-height: $line-height
  background: $bgColor
  color: $textColor
}
body { 
  background: $bgColor
  -webkit-font-smoothing: antialiased
}

.Inter { font-family: $font }
.Satoshi { font-family: 'Satoshi-Variable'}
h1,h2,h3,h4,h5,h6 { font-family: $font }


a { 
  color: $linkColor 
  font-weight: 400
}

#app,
.layout-container,
.theme-container { 
  min-height:100vh
  min-height:100dvh
}

/*
a { 
  color: $accentColor 
}
*/

:not(.handsontable) {
  * { 
    outline: $accentColor solid 0 
    outline-offset: -2px;
  }

  :focus-visible {
    outline: $accentColor solid 1px 
  }
}


#nprogress .bar { 
  background: $accentColor 
}
.hidden { 
  display:none
}

@media (min-width: $xxxLarge) {
  #app { 
    width:$xxxLarge
    margin: 0 auto

    .navbar .navbar-wrapper { 
      width:$xxxLarge
      margin: 0 auto
    }
    .sidebar { 
      left: 50%
      transform: translateX(16 + $xxxLarge/-2)  
    }
    .table-of-contents { 
      right:50%
      transform: translateX(16 + $xxxLarge/2)  
    }
  }
}

@media (min-width: $xLarge) {
  #app {
   .footer {
      max-width: 720px
    }
  }
}

.decoration-right { 
  display: block
  background:  url('{{$basePath}}/img/bg-gradient.webp'); 
  background-size: 100%
  width: 680px
  height: 1212px 
  position fixed
  top 0
  right:0
  opacity .1
  pointer-events: none
  filter: hue-rotate(40deg);
  z-index -1
}

