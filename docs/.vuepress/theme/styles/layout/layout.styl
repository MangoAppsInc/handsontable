.decoration-left { 
  display: block
  background:  url('{{$basePath}}/img/hero-left.webp'); 
  background-size: 100%
  width: 280px
  height: 360px
  position: fixed
  top:0
  left:0
  animation: 12s linear 0s infinite alternate none running animation-left;
  opacity 0
}
.decoration-right { 
  display: block
  background:  url('{{$basePath}}/img/hero-right.webp'); 
  background-size: 100%
  width: 288px
  height: 1080px 
  position fixed
  top -140px
  right:0
  animation: 30s linear 0s infinite alternate none running animation-right;
  opacity .25
}

@keyframes animation-left {
  0% {
    transform: scale(1.25) rotate(0deg) translateX(0.1rem) translateY(0px);
  }
  20% {
      transform: scale(1.35) rotate(1deg) translateX(1.2rem) translateY(1rem);
  }
  50% {
      transform: scale(2.6) rotate(-1deg) translateX(0.5rem) translateY(1.4rem);
  }
  75% {
      transform: scale(1.5) rotate(1deg) translateX(2rem) translateY(2.5rem);
  }
  100% {
      transform: scale(1.35) rotate(0deg) translateX(2rem) translateY(2.75rem);
  }
}

@keyframes animation-right {
  0% {
    transform: scale(1) rotate(0deg);
  }
  20% {
      transform: scale(1.35) rotate(2.5deg) translateX(1.75rem) translateY(0.85rem);
  }
  50% {
      transform: scale(1.1) rotate(-1deg) translateX(1rem);
  }
  75% {
      transform: scale(1.35) rotate(1deg) translateX(0px) translateY(0px);
  }
  100% {
      transform: scale(1) rotate(0deg) translateX(0px) translateY(0px);
  }
}